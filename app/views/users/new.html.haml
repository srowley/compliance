%h1 Sign Up

= form_for @user do |f|
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :user_first_name, 'First Name'
    %br
    = f.text_field :user_first_name
  %p
    = f.label :user_last_name, 'Last Name'
    %br
    = f.text_field :user_last_name
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = label_tag "Editor"
    = check_box_tag "editor", "true"
  %p
    = f.submit 'Sign Up'
